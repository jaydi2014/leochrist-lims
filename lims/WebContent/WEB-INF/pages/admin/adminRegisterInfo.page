<html xmlns="http://www.w3.org/1999/xhtml">
<head>
#set($tmplpath="../")
<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
<link href="${tmplpath}css/index/global.css" type="text/css" rel="stylesheet" />
<link href="${tmplpath}css/index/index.css" type="text/css" rel="stylesheet" />
<title>LeoChrist-LIMS</title>
</head>
<body>
	#parse("/WEB-INF/common/head.vm")
	<div class="struct_body">
		<div class="register_info">	
			<table cellpadding="0" cellspacing="0">
				<col width="10%"/>
				<col width="15%"/>
				<col width="10%"/>
				<col width="25%"/>
				<col width="15%"/>
				<col width="25%"/>
				<tbody>
					<tr><th>序号</th><th>用户名</th><th>姓名</th><th>身份证</th><th>权限授予</th><th>操作</th></tr>
					#foreach($register in $registers)
					<tr><td>$velocityCount</td><td>$register.username</td><td>$register.person.name</td><td>$register.person.dCard</td><td><select class="select_100"><option>请选择</option>#foreach($role in $roles)<option>$role.roleName</option>#end</select></td><td><button class="button_50">审阅</button><button class="button_50">批准</button><button class="button_50">拒绝</button></td></tr>
					#end
				</tbody>
			</table>
		</div>

		<div class="admin_nav">	
			<ul>
				<li><a href="/lims/admin/adminRegisterInfo.action">用户注册信息</a></li>
				<li>用户注册信息</li>
				<li>用户注册信息</li>
			</ul>
		</div>
	</div>
	#parse("/WEB-INF/common/foot.vm")
</body>
</html>