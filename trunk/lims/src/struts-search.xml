<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="search" extends="default" namespace="/">
		<action name="searchView" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchView">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchView.page</result>
		</action>
		
		<action name="searchPerson" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchPerson">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchPerson.page</result>
		</action>
		
		<action name="searchPersonByName" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchPersonByName">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchPersonByName.page</result>
		</action>
		
		<action name="searchPersonAll" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchPersonAll">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchPersonByName.page</result>
		</action>
		
		<action name="searchResult" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchResult">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchResult.page</result>
		</action>
		
		<action name="searchDissertation" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchDissertation">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchDissertation.page</result>
		</action>
		
		<action name="searchDissertationByName" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchDissertationByName">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchDissertationByName.page</result>
		</action>
		
		<action name="searchDissertationAll" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchDissertationAll">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchDissertationByName.page</result>
		</action>
		
		<action name="searchProject" class="cn.edu.buaa.leochrist.actions.SearchAction"
			method="searchProject">
			<result type="velocity" name="success">/WEB-INF/pages/search/searchProject.page</result>
		</action>
		
	</package>
</struts>